page{
 background:#F5F5F5;
width:100%;
height:100%;
overflow:hidden;

}
.animals{
  width:100%;
height:100%;
box-sizing:border-box;
padding:26rpx 30rpx 18rpx 30rpx;
display:flex;
flex-direction:column;

}
.animals-num{
  width: 690rpx;
  height:114rpx;
  background: #fff;
  box-shadow:1rpx 1rpx 4rpx 0rpx rgba(0, 0, 0, 0.2), 0px 2px 4px 0px rgba(0, 0, 0, 0.2);
  border-radius:4rpx;
  padding-top: 56rpx;
  padding-bottom: 72rpx;
}
.num-box{
  width: 100%;
  height:120rpx;
  display: flex;
}
.rol{
  width: 33.3333%;
  height:100%;
  border-right: 1px solid #ECECEC;
  display: flex;
  flex-direction: column;
  align-content: center;
}
.rol:last-child{
  border:0;
}
.rol text{
  display: block;
  text-align: center
}
.rol text:first-child{
  font-size:51rpx;
  font-weight:bold;
  color:rgba(179,185,0,1);
  line-height: 74rpx;
}
.rol text:last-child{
  font-size:24rpx;
  color:rgba(85,85,85,1);
}

.list-box{
  width:100%;
  flex:1;

}
.list-bg{
  position:relative;
  width:100%;
  height:100%;

}
.bg-img{
  width:100%;
  height:100%;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.list-tit{
  width:100%;
  height:120rpx;
  text-align: center;
  line-height: 160rpx;
  font-size:40rpx;
  font-family:Adobe Heiti Std R;
  font-weight:bold;
  color:rgba(255,142,0,1);
  text-indent: 20rpx;
}
/* 列表 */
.love-tab{
  width: 100%;
  box-sizing: border-box;
  height:100%;
  padding-left: 20rpx;
  padding-right:11rpx;
  padding-top:30rpx;
  padding-bottom: 50rpx;
}
.tabl-tit{
  width:100%;
  height:68rpx;
  background:rgba(243,243,243,1);
  display: flex;
  justify-content: space-between;
}
.tabl-tit text{
  width: 33.33333%;
  text-align: center;
  display: block;
  font-size:24rpx;
  font-family:inpinheiti;
  color:rgba(103,101,102,1);
  line-height:68rpx;
}


/* 名单 */
.list-per{
  height:676rpx;
  overflow:hidden;
}
.pro-listY{
   width:100%;
  height:100%;
  overflow-y:scroll;
}
.perp-rol-box{
  width:100%;
  height:100%;
}
.perp-cal{
  width: 100%;
  height:74rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #F3F3F3;
}
.perp-rol-box .perp-cal:last-child{
  border-bottom:0;
}
.huang-img{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 33.3333%;
}
.perp-cal image{
  width: 38rpx;
  height:50rpx;
  display: block;
}
.perp-cal text{
  width:33.3333%;
  text-align: center;
  line-height: 74rpx;
}
.username{
  font-size:26rpx;
  font-family:SimHei;
  color:rgba(34,34,34,1);
}
.userprice{
  width:48px;
  font-size:26rpx;
  font-family:SimHei;
  color:rgba(230,216,0,1);
}