page{
  width: 100%;
  height: 100%;
}
.myActivity{
  padding: 10rpx 24rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: RGBA(245, 245, 245, 1);
}
.Activity_list{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.activity{
  height:148rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 2px 0px rgba(90, 18, 77, 0.35);
  border-radius:3px;
  padding:10rpx;
  display: flex;
  margin-bottom: 14rpx;
  position: relative;
}
.image_box{
  width: 144rpx;
  height:100%;
  margin-right: 24rpx;
}
.image_box image{
  width: 100%;
  height: 100%;
  display: block;
}
.activ_pro{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.tea_tit{
  font-size:26rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  display: block;
  line-height: 52rpx;
}
.acti_timer,.acti_site{
  line-height:20rpx;
}
.acti_timer{
  margin-bottom: 18rpx;
}
.acti_timer text,.acti_site text{
  font-size:18rpx;
  font-family:MicrosoftYaHei;
  color:rgba(153,153,153,1);
  line-height:20rpx;
}
.chakan{
  width:66rpx;
  height:26rpx;
  background:rgba(230,222,1,1);
  border-radius:2px;
  font-size:18rpx;
  color:rgba(255,255,255,1);
  line-height:26rpx;
  position: absolute;
  right: 12rpx;
  bottom:10rpx;
  text-align: center;
}