page{
  background: #F5F5F5;
  width: 100%;
  height:auto;
}
.projectIcon{
  display: flex;
  background: #fff;
  position: fixed;
  width: 100%;
  overflow-x:scroll;
}
.projectIconList{
  padding:25rpx 52rpx 71rpx;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.projectIconList image{
  width:47rpx;
  height:47rpx;
  margin-bottom:21rpx;
}
.projectIconList text{
  font-size:26rpx;
  font-family:SimHei;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:30rpx;
  position:absolute;
  bottom:25rpx;
  width:120rpx;
  overflow:hidden;
  height:26rpx;
  text-overflow:ellipsis;
  white-space:nowrap;
  text-align:center;

}
.shopp-box{
  width: 100%;
}
.shopp-list-box{
  width: 100%;
  height:100%;
  padding:17rpx 19rpx;
  box-sizing: border-box;
  margin-bottom: 100rpx;
  padding-top:167rpx;
}
.shopp-list{
  width: 100%;
  height:100%;
  display: flex;
  flex-wrap: wrap;
}
.list{
  width:346rpx;
  height:458rpx;
  margin-bottom: 11rpx;
  background: #fff;
  border-radius:6rpx;
  float: left;
}
.list:nth-child(2n-1){
  margin-right: 9rpx;
}
.list:nth-child(2n){
  margin-left: 9rpx;
}
.list-image{
  width: 100%;
  height:280rpx;
}
.list-image image{
  width: 100%;
  height:100%;
  display: block;
}

/* 商品信息 */
.menu-con{
  width: 100%;
  height:200rpx;
  box-sizing: border-box;
  padding:12rpx 20rpx 58rpx 22rpx;
}
.content{
  width: 100%;
}
.shorp-pro{
  width:271rpx;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}
.shorp-name{
  width:286rpx;
  font-size:24rpx;
  color:rgba(153,153,153,1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}
/* 价格 */
.list-price{
  margin-top:23rpx;
  display: flex;
  justify-content: space-between;
}
.newpri{
  font-size:31rpx;
  color:rgba(255,104,0,1);
}
.oldpri{
  font-size:22rpx;
  text-decoration:line-through;
  color:rgba(206,206,206,1);
  margin-left: 18rpx;
}
.addshopp-iage{
  width: 37rpx;
  height:36rpx;
}
.addshopp-iage image{
  width: 100%;
  height:100%;
  display: block;
}


/* 弹幕发射框 */
.send-box{
  width: 100%;
  height:81rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 88888;
  background: #fff;
}
.send-data{
  padding:8rpx 19rpx 5rpx 30rpx;
  box-sizing: border-box;
  display: flex;
}
.words{
  width: 528rpx;
  height:68rpx;
  font-size: 26rpx;
  border: 1px solid #D8D8D8;
  border-radius: 5rpx;
  text-indent: 35rpx;
}
.but{
  width: 168rpx;
  height:68rpx;
  background: #FFF000;
  font-size:32rpx;
  color:rgba(255,255,255,1);
  line-height: 68rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.acticve{
  color:rgba(102,102,102,1);
  line-height:30px;

  background:linear-gradient(-51deg,rgba(255,240,0,1) 0%, rgba(247,186,0,1) 100%);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
}