page{
  width: 100%;
  height: 100%;
}
.site_Box{
  width: 100%;
  height: 100%;
  border-top: 1px solid #C6C6C6;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.Site{
  width: 100%;
  flex: 1;
  padding-bottom: 100rpx;
}
.my_Site{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 22rpx;
}
.Header_Img{
  padding:0 24rpx;
}
.Header_Img image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: block;
}
.userInfo{
  flex: 1;
  text-align: left;
  padding-right: 16rpx;
}
.userName{
  font-size:30rpx;
  color:rgba(51,51,51,1);
  line-height: 60rpx;
  margin-right: 28rpx;
}
.userIphone{
  font-size:26rpx;
  color:rgba(153,153,153,1);
  line-height: 60rpx;
}
.siteM{
  width: 100%;
}
.siteM .active{
  padding:4rpx 12rpx; 
  background:rgba(251,255,141,1);
  font-size:26rpx;
  color:rgba(187,132,1,1);
}
.site_user{
  font-size:26rpx;
  color:rgba(0,0,0,1);
  /* line-height:15px; */
}
.Bj_Site{
  padding:0 26rpx 0 16rpx; 
  border-left: 1px solid #666;
}
.Bj_Site image{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: block;
}
.addSite{
  width: 100%;
  height:100rpx;
  background: #fff001;
  position: fixed;
  bottom:0;
  left: 0;
}
.addSite text{
  display: block;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
}
.addSite image{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 240rpx;
  top: 26rpx;
}