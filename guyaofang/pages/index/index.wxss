.wrap {
  height: auto;
  position: relative;
  width: 100%;
}
.swipers {
  height: 400rpx;
  width: 100%;
}
.slide-image {
  display: inherit;
  width: 100%;
  height: 100%;
  margin:0 auto;
}
.dots {
  width: 156rpx;
  height: 20rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 291rpx;
  bottom: 20rpx;
}
.dot {
  width:34rpx;
  height:8rpx;
  background:rgba(236,236,236,1);
  border-radius:4rpx;
  margin:0 6rpx;
}
.active {
background:rgba(255,223,9,1);
}

/* 导航栏 */
.nav{
  width: 100%;
  height:178rpx;
  background: red;
  margin:6rpx 0;
  display: flex;
  box-sizing: border-box;
  padding:0 16rpx;
  justify-content: space-between;
  align-items: center;
}
.sel{
  width: 230rpx;
  height:124rpx;
  background: black;
}

/* 页面主体内容 */
.menu-box{
  width: 100%;
  background: #F5F5F5;
}
.menu{
  width: 100%;
  box-sizing: border-box;
  padding:12rpx 19rpx;
  overflow: hidden;
}
.list{
  width:346rpx;
  height:458rpx;
  margin-bottom: 11rpx;
  background: #fff;
  border-radius:6rpx;
  float: left;
}
.list:nth-child(2n-1){
  margin-right: 9rpx;
}
.list:nth-child(2n){
  margin-left: 9rpx;
}
.list-image{
  width: 100%;
  height:280rpx;
}
.list-image image{
  width: 100%;
  height:100%;
  display: block;
}

/* 商品信息 */
.menu-con{
  width: 100%;
  height:200rpx;
  box-sizing: border-box;
  padding:12rpx 20rpx 58rpx 22rpx;
}
.content{
  width: 100%;
}
.shorp-pro{
  width:271rpx;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}
.shorp-name{
  width:286rpx;
  font-size:24rpx;
  color:rgba(153,153,153,1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}
/* 价格 */
.list-price{
  margin-top:23rpx;
  display: flex;
  justify-content: space-between;
}
.newpri{
  font-size:31rpx;
  color:rgba(255,104,0,1);
}
.oldpri{
  font-size:22rpx;
  text-decoration:line-through;
  color:rgba(206,206,206,1);
  margin-left: 18rpx;
}
.addshopp-iage{
  width: 37rpx;
  height:36rpx;
}
.addshopp-iage image{
  width: 100%;
  height:100%;
  display: block;
}