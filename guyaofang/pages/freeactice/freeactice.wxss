page{
  background: #F5F5F5;
  width: 100%;
  height:auto;
}
.wrap {
  height: auto;
  position: relative;
  width: 100%;
}
swiper{
  height: 500rpx !important;
  width: 100%;
}
.slide-image {
  display: inherit;
  width: 100%;
  height: 100%;
  margin:0 auto;
}
.dots {
  width: 156rpx;
  height: 20rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 291rpx;
  bottom: 20rpx;
}
.dot {
  width:34rpx;
  height:8rpx;
  background:rgba(236,236,236,1);
  border-radius:4rpx;
  margin:0 6rpx;
}
.active {
background:rgba(255,223,9,1);
}

/* 商品详情 */
.big-box{
  width: 100%;
  height: auto;
  padding-bottom: 160rpx;
}
.pro-box{
  width: 100%;
  height: auto;
}
.commodity-box{
  width: 100%;
  height: auto;
  padding-bottom: 17rpx;
  background: #fff;
  margin-top:8rpx;
  margin-bottom: 9rpx;
}
.freeTit-box{
  width: 100%;
  box-sizing: border-box;
  padding-left:30rpx;
  height:70rpx;
}
.free-tit{
  width: 100%;
  height:100%;
  border-bottom: 1px solid #F2F2F2;
}
.free-tit image{
  width: 36rpx;
  height:32rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}
.free-tit text{
  font-size:28rpx;
  color:rgba(68,68,68,1);
  line-height:70rpx;
}
/* 商品列表  横向 */
.proList-box{
  width: 100%;
  padding:8rpx 25rpx;
  height: 280rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.pro-list{
  width: 100%;
  /* height:230rpx; */
  height:100%;
  display: flex;
  overflow-x: scroll;
  flex-wrap: nowrap;
  align-items: center;
  white-space: nowrap;
  position: absolute;
  bottom: 0;
}
.pro-free{
  margin-right: 16rpx;
  width:162rpx;
  height:207rpx;
  background:rgba(255,255,255,1);
  box-shadow:-1px -1px 2px 0px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.2);
  border-radius:4rpx;
  border:1px solid #D9D9D9; 
  display: inline-block;
  position: relative;
  margin-top: 75rpx;
}
.pro-free:last-child{
  margin-right: 100rpx;
}
.prolist-jie{
  width: 100%;
  height:140rpx;
  position: absolute;
  left: 0;
  bottom:0;
}
.prolist-name{
  display: block;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  text-align: center;
}
.prolist-prcie{
  display: block;
  font-size:20rpx;
  color:rgba(255,223,9,1);
  line-height:50rpx;
  text-align: center;
}
.add-shop{
  text-align: center;
}
.addshopp-image{
  width: 37rpx;
  height:36rpx;
  display: inline-block;
}



.anmm-img{
  width: 99rpx;
  height:100rpx;
  border-radius: 50%;
  position: absolute;
  left: 30rpx;
  top: -47rpx;
}

/* 商品介绍图 */
.proImage-box{
  width: 100%;
  height:auto;
}
.proImage-tit{
  width:100%;
  height:71rpx;
  padding-left:30rpx;
  background: #fff;
}
.proImage-box .proImage-tit image{
  width: 33rpx;
  height:33rpx;
  vertical-align: middle;
  display: inline-block;
  margin-right: 19rpx;
}
.proImage-tit text{
  font-size:28rpx;
  color:rgba(68,68,68,1);
  line-height:71rpx;
}
.proImage-box image{
  width:100%;
  display: block;
}

/* 加入购物车 */
.addShopp-box{
  width: 100%;
  height:100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.add-shopp{
  width: 100%;
  height:100%;
  display: flex;
}
.add-left{
  width: 233rpx;
  height:100%;
  display: flex;
}
.shopping,.shop-cart{
  width: 50%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.shopping image,.shop-cart image{
  width: 38rpx;
  height:36rpx;
  display: block;
}
.shop-names{
  font-size:22rpx;
  color:rgba(51,51,51,1);
  line-height:42rpx;
  display: block;
}
.add-right{
  /* width: 516rpx; */
  height:100%;
  display: flex;
  flex: 1;
}
.add-but{
  /* width: 259rpx; */
  width: 50%;
  height:100%;
  background: #FFA124;
}
.add-but text{
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:98rpx;
  display: block;
  text-align: center;
}
.predetermine{
  /* width: 270rpx; */
  width: 50%;
  height:100%;
  background: #FF803A;
}
.predetermine text{
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:98rpx;
  display: block;
  text-align: center;
}
