page{
  width: 100%;
  height:100%;
}
.big-box{
  width: 100%;
  height:100%;
}
.image-box{
  width:100%;
  height:100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.image-box image{
  width: 100%;
  height:100%;
  display: block;
}

/* 底部加入活动 */
.add-bot{
  width: 100%;
  height:100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  box-sizing: border-box;
  padding-left:29rpx;
}
.add-footer{
  width: 100%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.add-left{
  overflow: hidden;
  display: flex;
  align-items: center;
}
.add-left image{
  width: 26rpx;
  height:32rpx;
  margin-right: 10rpx;
}
.add-left text{
  font-size:30rpx;
  color:rgba(45,102,96,1);
  line-height:100rpx;
}
.add-con text{
  font-size:26rpx;
  color:rgba(45,102,96,1);
  line-height:100rpx;
}
.add-right button{
  background: #FF803A;
  height:100rpx;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:100rpx;
  border-radius: 0;
}