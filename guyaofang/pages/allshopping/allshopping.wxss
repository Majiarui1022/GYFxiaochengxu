/* pages/about/about.wxss */
page{
  background: #F5F5F5;
}
.swiper-tab{
    width: 100%;
    height: 150rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    background: #fff;
    margin-top:6rpx;
    margin-bottom: 14rpx;
    overflow-x: scroll;
    white-space: nowrap;
}
.swiper-tab-item{
    width: 150rpx;
    font-size:26rpx;
    color:rgba(102,102,102,1);
    display: inline-block;
    text-align: center;
}
.active{
  color:rgba(102,102,102,1);
  background:linear-gradient(-51deg,rgba(255,240,0,1) 0%, rgba(247,186,0,1) 100%);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none !important;
}



.shopp-box{
  width: 100%;
}
.shopp-list-box{
  width: 100%;
  height:100%;
  padding:17rpx 19rpx;
  box-sizing: border-box;
  margin-bottom: 100rpx;
  
}
.shopp-list{
  width: 100%;
  height:100%;
  display: flex;
  flex-wrap: wrap;
}
.list{
  width:346rpx;
  height:458rpx;
  margin-bottom: 11rpx;
  background: #fff;
  border-radius:6rpx;
  float: left;
}
.list:nth-child(2n-1){
  margin-right: 9rpx;
}
.list:nth-child(2n){
  margin-left: 9rpx;
}
.list-image{
  width: 100%;
  height:280rpx;
}
.list-image image{
  width: 100%;
  height:100%;
  display: block;
}

/* 商品信息 */
.menu-con{
  width: 100%;
  height:200rpx;
  box-sizing: border-box;
  padding:12rpx 20rpx 58rpx 22rpx;
}
.content{
  width: 100%;
}
.shorp-pro{
  width:271rpx;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}
.shorp-name{
  width:286rpx;
  font-size:24rpx;
  color:rgba(153,153,153,1);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}
/* 价格 */
.list-price{
  margin-top:23rpx;
  display: flex;
  justify-content: space-between;
}
.newpri{
  font-size:31rpx;
  color:rgba(255,104,0,1);
}
.oldpri{
  font-size:22rpx;
  text-decoration:line-through;
  color:rgba(206,206,206,1);
  margin-left: 18rpx;
}
.addshopp-iage{
  width: 37rpx;
  height:36rpx;
}
.addshopp-iage image{
  width: 100%;
  height:100%;
  display: block;
}
